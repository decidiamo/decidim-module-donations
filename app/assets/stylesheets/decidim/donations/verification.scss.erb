.decidim-donations {
  .amount {
    font-weight: 600;
  }
  .provider {
    &.paypal_express {
      font-style: italic;
      font-weight: bold;
      font-size: 1.2em;
    }
  }
  .terms-and-conditions {
    margin-top: 2em;
  }
  .checkout-form {
    label[for="checkout_amount"] {
      font-weight: 600;
      font-size: 1.5em;
    }
    #checkout_amount {
      font-size: 3rem;
      height: auto;
      background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' version='1.1' height='28px' width='80px'><text x='1' y='13' fill='gray'><%= Decidim.currency_unit %></text></svg>");
      background-repeat: no-repeat;
      background-position: 0.5em 0.5em;
      background-size: contain;
      padding-left: 1.5em;
    }
  }
}